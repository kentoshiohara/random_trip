<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='header-contents'>
    <div class='header-left'>
      <div class='lists-left'>
      <%= link_to image_tag("randomtrip_blue.png", width:"80", height:"80", class:"randomtrip-icon"), "/" %>
      </div>
      <div class='header-title'>
        <%= link_to "RANDOM TRIP", "/", class:"randomtrip-letter" %>
      </div>
    </div>
    <nav class='header-right'>
      <ul class='lists-right'>
        <% if user_signed_in? %>
          <li id="accordion_tab" class="link"><%= current_user.name%>さん</li>
          <%# マイページリンク作成 %>
          <ul class="accordion_contents hidden" id="accordion-contents">
          <li><%= link_to '記録', edit_user_path(current_user.id), class: "content" %></li>
          <li><%= link_to 'ランキング', ranking_user_path(current_user.id), class: "content" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "content" %></li>
          </ul>
          <li><%= link_to '旅行先診断', new_destination_path, class: "link" %></li>
          <%# マイページリンク作成 %>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "link" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "link" %></li>
          <li><%= link_to '旅行先診断', new_destination_path, class: "link" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>