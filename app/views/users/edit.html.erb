<%= render "shared/header" %>

<div class="user-main">
  <div class="user-container">
    <div class="history">
      <h2>これまでの旅行先</h2>
    </div>
    <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <div class="donut-chart"></div>
    <div class="prefecture-check-box">
      <div class="check-box-details">
        <%= f.collection_check_boxes :history_ids, History.all, :id, :name, include_hidden: false do |history| %>
          <%= history.check_box + history.text %>
        <% end %>
      </div>
    </div>
    <div class="save-btn">
      <%= f.submit "UPDATE", class: "update" %>
    </div>
  <% end %>
  </div>
</div>

<%= render "shared/footer" %>